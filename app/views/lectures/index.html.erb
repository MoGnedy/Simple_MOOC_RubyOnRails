<p id="notice"><%= notice %></p>

<h1>Lectures</h1>
<%= link_to "New Resume", new_lecture_path, class: "btn btn-primary" %>
<br>
<br>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Attachment</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.title %></td>
        <td><%= lecture.content %></td>
        <!-- <td><%= lecture.attachment %></td> -->
        <td><%= link_to "Download Attachment", lecture.attachment_url %></td>
        <td><%= lecture.course.title if lecture.course  %></td>
        <td><%= button_to 'Show', lecture, class: "btn btn-success"%></td>
        <td><%= button_to 'Edit', edit_lecture_path(lecture) ,class: "btn btn-primary" %></td>
        <td><%= button_to 'Delete', lecture, method: :delete,class: "btn btn-danger", data: { confirm: "Are you sure that you wish to delete #{lecture.title}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture', new_lecture_path %>
