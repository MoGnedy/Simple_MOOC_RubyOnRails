<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <!-- <%= f.text_field :gender %> -->
    <%= f.radio_button :gender, 'Male', :checked => true %> Male
    <%= f.radio_button :gender, 'Female' %> Female
  </div>

  <div class="field">
    <%= f.label :dob %>
    <%= f.date_select :dob %>
  </div>

  <%= collection_select(:user, :role_id, Role.all, :id, :name, {prompt: true}) %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
